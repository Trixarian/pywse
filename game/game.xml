<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<ws name="wse-feature-walkthrough">
    <settings>
        <stage width="800px" height="420px" create="yes" center="yes" resize="no" />
        <triggers>
            <trigger name="game_menu_key_trigger" event="keyup" key="ESCAPE" function="savegames" />
            <trigger name="next_on_right" event="keyup" key="RIGHT_ARROW" special="next" />
            <trigger name="next_on_space" event="keyup" key="SPACE" special="next" />
        </triggers>
    </settings>
    <assets>
        <textbox name="tb_main" x="5px" y="295px" width="790px" height="120px" namebox="no" speed="40" behaviour="adv">
            <nameTemplate><b>[{name}]</b><br /></nameTemplate>
        </textbox>
        
        <character name="n" textbox="tb_main"></character>
        <character name="m" textbox="tb_main">
            <displayname>Green Monster</displayname>
        </character>
        
        <imagepack name="img_monster" x="300px" y="50px" z="1000" cssid="img_monster">
            <image src="assets/images/green_monster.png" name="default" />
        </imagepack>
        
        <background name="bg" z="100" src="assets/images/daytime_clouds_A_01.jpg" />
        
        <audio name="environment" loop="true">
            <track title="rain">
                <source href="assets/audio/rain.mp3" type="mp3" />
                <source href="assets/audio/rain.ogg" type="ogg" />
            </track>
            <track title="birds">
                <source href="assets/audio/birds.mp3" type="mp3" />
                <source href="assets/audio/birds.ogg" type="ogg" />
            </track>
        </audio>
    </assets>
    <scenes>
        <scene id="start">
            <trigger name="next_on_right" action="activate" />
            <trigger name="next_on_space" action="activate" />
            <trigger name="game_menu_key_trigger" action="activate" />
            
            <goto scene="my_first_scene" />
        </scene>
        
        <scene id="my_first_scene">
            <set asset="environment" track="birds" />
            <play asset="environment" />
            
            <show asset="bg" />
            <wait />
            
            <show asset="tb_main" />
            <wait />
            
            <set asset="img_monster" image="default" />
            <show asset="img_monster" effect="slide" direction="top" />
            <wait />
            
            <move asset="img_monster" x="10px" />
            <wait />
            
            <move asset="img_monster" x="450px" />
            <wait />
            
            <move asset="img_monster" x="250px" />
            <wait />
            
            <flicker asset="img_monster" />
            <wait />
            
            <line s="m">
                ROAR!!! Welcome! T'is te WebStory Engine demo game, yo!
            </line>
            
            <line s="m">
                Wanna write ya own game? Just replace da imagepack, background and audio wit ya own stuff, yo!
            </line>
            
            <line s="m">
                Needin' help, dontcha? Go to te 
                <a href="http://webstoryengine.org" target="_blank" onclick="event.stopPropagation();">website</a> for te docs.
                Or ya wanna talk to te engine makers, gotta go to te 
                <a href="https://iiyo.org/f/categories/webstory-engine-support" 
                    target="_blank" onclick="event.stopPropagation();">support forums</a>!
            </line>
            
            <stop asset="environment" />
            <restart />
        </scene>
    </scenes>
</ws>